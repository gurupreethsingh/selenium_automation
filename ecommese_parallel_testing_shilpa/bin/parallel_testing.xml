<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Ecommerce Parallel Testing Suite"
       parallel="tests"
       thread-count="4"
       verbose="2">

    <!-- ===== Test 1: Firefox ===== -->
    <test name="Firefox_Tests" parallel="classes" thread-count="1">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="scripts.homepage_scripts.regression_scenarios.HomepageRegressionScenarios"/>
        </classes>
    </test>

    <!-- ===== Test 2: Chrome ===== -->
    <test name="Chrome_Tests" parallel="classes" thread-count="1">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="scripts.homepage_scripts.regression_scenarios.HomepageRegressionScenarios"/>
        </classes>
    </test>

    <!-- ===== Test 3: Edge ===== -->
    <test name="Edge_Tests" parallel="classes" thread-count="1">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="scripts.homepage_scripts.regression_scenarios.HomepageRegressionScenarios"/>
        </classes>
    </test>

</suite>
