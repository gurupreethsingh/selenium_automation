<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Ecommerce Parallel Testing Suite"
       parallel="tests"
       thread-count="3"
       verbose="2">
    <test name="Firefox_Tests">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="scripts.homepage_scripts.regression_scenarios.HomepageRegressionScenarios"/>
        </classes>
    </test>

    <test name="Chrome_Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="scripts.homepage_scripts.regression_scenarios.HomepageRegressionScenarios"/>
        </classes>
    </test>

    <test name="Edge_Tests">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="scripts.homepage_scripts.regression_scenarios.HomepageRegressionScenarios"/>
        </classes>
    </test>
</suite>

